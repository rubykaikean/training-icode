<h1>Listing massages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Receiver</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @massages.each do |massage| %>
      <tr>
        <td><%= massage.title %></td>
        <td><%= massage.content %></td>
        <td><%= massage.user_id %></td>
        <td><%= massage.receiver_id %></td>
        <td><%= link_to 'Show', massage %></td>
        <td><%= link_to 'Edit', edit_massage_path(massage) %></td>
        <td><%= link_to 'Destroy', massage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

