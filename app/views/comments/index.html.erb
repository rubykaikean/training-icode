<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Post</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td align="center"><%= comment.contant %></td>
        <td align="center"><%= comment.post_id %></td>
        <td align="center"><%= comment.user_id %></td>
        <td align="center"><%= link_to 'Show', post_comment_path(@post , comment), :class=>"g-button" %></td>
        <td align="center"><%= link_to 'Show', [@post , comment], :class=>"g-button" %>
        <%= link_to 'Edit', edit_post_comment_path(@post , comment),:class=>"g-button"  %>
        <%= link_to 'Destroy', [@post , comment], method: :delete, data: { confirm: 'Are you sure?' },:class=>"r-button"  %>
        <%= link_to 'Info' , info_post_comment_path(@post , comment) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

