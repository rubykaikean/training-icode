<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>E-Mail</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="black-line-table">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.description %></td>
        <td><%= link_to 'Show', user , :class=>"g-button"%></td>
        <td><%= link_to 'Edit', edit_user_path(user) , :class=>"g-button" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"r-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

