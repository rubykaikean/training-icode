<h1>Listing posts</h1>

<table class="black-line-table">
  <thead class="header_line">
    <tr>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= link_to "Comment" ,post_comments_path(post)  , :class => "g-button"%></td>
        <td><%= link_to 'Show', post, :class => "g-button"  %>
        <td><%= link_to 'Edit', edit_post_path(post), :class => "g-button"  %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "r-button"  %>
            <%= link_to "Info" , info_post_path(post) %></td>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "logout" , destroy_user_session_path, method: :delete %>
<%= link_to 'New Post', new_post_path , :class => "g-button"%>
<%= link_to "contact" , contact_posts_path, :class => "g-button" %>
